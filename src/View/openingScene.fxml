<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>


<AnchorPane fx:id="anchorPane" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="View.OpeningSceneController">
   <children>
       <ImageView fx:id="image" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="false" />


      <MenuBar fx:id="menuBar" prefHeight="26.0" prefWidth="600.0">
        <menus>
          <Menu id="help" mnemonicParsing="false" text="Help">
               <items>
                  <MenuItem fx:id="rules" mnemonicParsing="false" onAction="#openRules" text="Instructions" />
               </items>
          </Menu>
          <Menu id="about" mnemonicParsing="false" text="About">
               <items>
                   <MenuItem fx:id="Information" mnemonicParsing="false" onAction="#openAbout" text="Information" />
               </items>
          </Menu>
        </menus>
      </MenuBar>
       <Button fx:id="startBtn" alignment="CENTER" mnemonicParsing="false" onAction="#openSecondScene" text="Start">
           <font>
               <Font name="Segoe Print" size="18.0" />
           </font>
       </Button>
   </children>
</AnchorPane>
